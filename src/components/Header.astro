---
import Alquileres from "@/components/icons/Alquileres.astro"
import Logo from "@/components/icons/Logo.astro"
import Ventas from "@/components/icons/Ventas.astro"
---

<header class="mx-auto flex max-w-5xl flex-row justify-between p-4">
	<!-- <img alt="" src="../images/logo.png" class="w-16" /> -->
	<a href="/">
		<Logo class="size-14 pl-2" />
	</a>
	<nav aria-label="Main navigation">
		<ul class="ml-auto flex flex-row gap-4">
			<li
				class="flex flex-col items-center justify-center text-xs font-medium text-black/60 hover:text-black"
			>
				<Alquileres class="mb-2 text-black/60 hover:text-black" />
				Alquileres
			</li>
			<li
				class="flex flex-col items-center justify-center text-xs font-medium text-black/60 hover:text-black"
			>
				<Ventas class="mb-2 text-black/60 hover:text-black" />
				Ventas
			</li>
			<!-- <li class="hover:bg-slate-200"><World /></li> -->
